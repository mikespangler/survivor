# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5434/survivor?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=survivor
POSTGRES_PORT=5434

# Application
# PORT is the backend API port (Railway/Render/etc will set this automatically in prod)
PORT=3000
NODE_ENV=development

# Frontend
# Used for CORS allow-origin in `src/main.ts`
FRONTEND_URL="http://localhost:3001"

# Clerk Authentication (backend)
CLERK_SECRET_KEY="sk_test_your_secret_key_here"

# Cloudinary Configuration (get from cloudinary.com dashboard)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=survivor/castaways

# Resend (email invites)
RESEND_API_KEY="re_your_api_key_here"
# In production, use a verified domain for deliverability (e.g. noreply@yourdomain.com)
FROM_EMAIL="noreply@survivor.com"

# File Upload Limits
MAX_FILE_SIZE=5242880  # 5MB in bytes
